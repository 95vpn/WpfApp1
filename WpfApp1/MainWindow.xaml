<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1800" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,30,10">

    <Grid x:Name="miGrid" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1800">
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Content="Enviar !!" Width="250" Height="100" FontSize="24"></Button>
        <Button Grid.Column="1" Background="Coral" FontSize="30" >

            <WrapPanel >
                <TextBlock Foreground="Aqua"><Run Text="Hola"/></TextBlock>
                <TextBlock Foreground="Azure"><Run Text="Click"/></TextBlock>
                <TextBlock Foreground="Beige"><Run Text="Enviar"/></TextBlock>
            </WrapPanel>
        </Button>

        <StackPanel Grid.Column="2" x:Name="Panel" PreviewMouseLeftButtonDown="Panel_PreviewMouseLeftButtonDown"  Width="300" Height="300" Background="Aqua">

            <Button Content="Dale" Margin="15" Width="150"></Button>
            <Button Content="Dale 2" Margin="15" Width="150" Click="Button_Click"></Button>
            <Button Content="Dale 3" Margin="15" Width="150"></Button>

        </StackPanel>
    </Grid>



</Window>
